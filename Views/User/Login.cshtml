@model WebApplication1.Models.User;

@{
	ViewData["Title"] = "User Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - e-Reserve</title>
</head>
<body>
	<h3>User Log in</h3>

	<form id="User" asp-action="Login" method="post">
		<div class="form-group">
			<label for="Username">Username</label>
			<input type="text" class="form-control" asp-for="Username" required />
		</div>

		<div class="form-group">
			<label for="Password">Password</label>
			<input type="password" class="form-control" asp-for="Password" required />
		</div>
		<button type="submit" class="btn btn-primary">Login</button>
	</form>

	<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
