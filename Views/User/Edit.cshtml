@model WebApplication1.Models.User;

@{
	ViewData["Title"] = "Edit Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - e-Reserve</title>
</head>
<body>
	<h3>Edit User</h3>

	<form id="User" asp-action="Edit" method="post" onsubmit="return ValidateForm(this)">
		<div asp-validation-summary="All" class="text-danger"></div>
		<input type="hidden" asp-for="UserID" />

		<div class="form-group">
			<label for="Username">Username</label>
			<input type="text" class="form-control" asp-for="Username" />
		</div>

		<div class="form-group">
			<label for="Password">Password</label>
			<input type="password" class="form-control" asp-for="Password" value="@Model.Password"/>
		</div>

		<div class="form-group">
			<label for="FirstName">Firstname</label>
			<input type="text" class="form-control" asp-for="FirstName" />
		</div>

		<div class="form-group">
			<label for="MiddleName">Middlename</label>
			<input type="text" class="form-control" asp-for="MiddleName" />
		</div>

		<div class="form-group">
			<label for="LastName">Lastname</label>
			<input type="text" class="form-control" asp-for="LastName" />
		</div>

		<div classs="form-group">
			<label for="DesignationID">Designation</label>
			<select asp-for="DesignationID" asp-items="ViewBag.Designations" class="form-control">
				<option value="">--Please select a designation--</option>
			</select>
		</div>

		<div class="form-group">
			<label for="UserNumber">User Number</label>
			<input type="number" class="form-control" asp-for="UserNumber" />
		</div>

		<div class="form-group">
			<label for="UserEmail">Email</label>
			<input type="email" class="form-control" asp-for="UserEmail" />
		</div>

		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

	<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
